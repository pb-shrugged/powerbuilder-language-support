{
	"name": "@powerbuilder-language-support/language-service",
	"version": "0.1.0",
	"description": "PowerBuilder language service library",
	"main": "./out/index.js",
	"types": "./out/index.d.ts",
	"scripts": {
		"build": "tsc -b",
		"watch": "tsc -b --watch",
		"clean": "rm -rf out && rm -rf node_modules && rm -f tsconfig.tsbuildinfo",
		"test": "jest",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"dependencies": {
		"@pb-shrugged/tree-sitter-powerbuilder": "^2.0.4",
		"@powerbuilder-language-support/logger": "^0.1.0",
		"tree-sitter": "^0.25.0",
		"vscode-languageserver-types": "^3.17.5"
	},
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@types/node": "^20.10.0",
		"jest": "^29.5.0",
		"ts-jest": "^29.1.0",
		"typescript": "^5.3.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testMatch": [
			"**/__tests__/**/*.test.ts"
		],
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/__tests__/**"
		]
	}
}
