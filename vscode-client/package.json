{
	"name": "powerbuilder-language-client",
	"displayName": "PowerBuilder Language Support",
	"description": "Language Server Protocol client for PowerBuilder",
	"version": "0.1.0",
	"publisher": "Jose Cagnini",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "powerbuilder",
				"aliases": [
					"PowerBuilder",
					"powerbuilder",
					"pb"
				],
				"extensions": [
					"srs",
					"srf",
					"srw",
					"sru",
					"sra",
					"srm"
				],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"scripts": {
		"build": "tsc -b",
		"watch": "tsc -b --watch",
		"clean": "rm -rf out"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@types/vscode": "^1.75.0",
		"typescript": "^5.3.0"
	}
}
