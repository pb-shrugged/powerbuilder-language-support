{
	"name": "@powerbuilder-language-support/powerbuilder-language-client",
	"displayName": "PowerBuilder Language Support",
	"description": "Language Server Protocol client for PowerBuilder",
	"version": "0.1.0",
	"publisher": "Jose Cagnini",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"main": "./out/extension.js",
	"types": "./out/extension.",
	"activationEvents": [
		"onLanguage"
	],
	"contributes": {
		"languages": [
			{
				"id": "powerbuilder",
				"aliases": [
					"PowerBuilder",
					"powerbuilder",
					"pb"
				],
				"extensions": [
					"srs",
					"srf",
					"srw",
					"sru",
					"sra",
					"srm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "PowerBuilder Language Support Client Configuration",
			"properties": {
				"powerbuilderLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 101,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"powerbuilderLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"powerbuilderLanguageServer.logLevel": {
					"type": "string",
					"default": "info",
					"enum": [
						"debug",
						"info",
						"warning",
						"error"
					],
					"description": "Controls the log level of the language server."
				}
			}
		},
		"commands": [
			{
				"command": "powerbuilderLanguageSupport.restartServer",
				"title": "Restart PowerBuilder Language Server"
			},
			{
				"command": "powerbuilderLanguageSupport.showServerStatus",
				"title": "Show PowerBuilder Language Server Status"
			},
			{
				"command": "powerbuilderLanguageSupport.showOutput",
				"title": "Show PowerBuilder extension output"
			}
		]
	},
	"scripts": {
		"build": "tsc -b --clean && tsc -b",
		"watch": "tsc -b --watch",
		"clean": "tsc -b --clean && rm -rf node_modules",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1",
		"@powerbuilder-language-support/logger": "^0.1.0"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@types/vscode": "^1.75.0",
		"typescript": "^5.3.0"
	}
}
